<div class="col-span-12 md:col-span-3" id="<%= dom_id food %>">
  <div class="card card-compact bg-base-100 shadow-2xl">
    <div class="card-body">
      <p class="my-5 text-xl">
        <%= food.name %>
      </p>

      <p class="my-2">
        <strong class="block font-medium mb-1">Kind:</strong>
        <%= food.kind_id %>
      </p>

      <p class="my-2">
        <strong class="block font-medium mb-1">Price:</strong>
        <%= food.price %>
      </p>

      <div class="justify-end card-actions">
        <%= link_to 'Edit this food', edit_food_path(food), class: "btn btn-outline btn-primary" %>
      </div>
    </div>
  </div>
</div>
